{
  "typst_lb": {
    "prefix": "lb",
    "body": [
      "#linebreak()"
    ],
    "description": "Typst linebreak shorthand"
  },
  "typst_pb": {
    "prefix": "pb",
    "body": [
      "\n#pagebreak()"
    ],
    "description": "Typst pagebreak shorthand"
  },
  "typst_doc": {
    "prefix": "doc",
    "body": [
      "#import \"@local/custom-conf:0.1.0\": *",
      "#let docfont = \"IosevkaTerm Nerd Font\"",
      "#set text(font: docfont)",
      "#cover(",
      "   title: \"$1\",",
      "   institute: \"$2\",",
      "   author: \"Eero Koskinen\",",
      "   date: \"${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE}\",",
      "   font: docfont",
      ")",
      "// reduce list spacing",
      "#set list(spacing: 0.7em)",
      "// more space after title",
      "#show heading: it => [ #it #v(0.8em) ]"
    ],
    "description": "Typst document preamble"
  },
  "typst_degree": {
    "prefix": "degree",
    "body": [
      "#sym.degree\\C"
    ],
    "description": "Typst degree shorthand"
  },
  "typst_figure": {
    "prefix": "figure",
    "body": [
      "#figure(rect(image(\"$1.png\")), caption: [$2])<$3>"
    ],
    "description": "Image figure shorthand"
  },
  "typst_arrow": {
    "prefix": "->",
    "body": [
      "#sym.arrow.r.long"
    ],
    "description": "Long arrow shorthand"
  },
  "typst_color": {
    "prefix": "color",
    "body": [
      "#text(fill: $1, [${TM_SELECTED_TEXT}])"
    ],
    "description": "Shorthand for adding color to selected text"
  }
}
